<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:padding="10dp"
    >



    <ImageView
        android:id="@+id/carImage"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/democar" />

    <TextView
        android:id="@+id/phone_no1txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Mobile No : "
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        app:layout_constraintStart_toEndOf="@+id/carImage"
        app:layout_constraintTop_toBottomOf="@+id/carNotxt"/>

    <TextView
        android:id="@+id/phone_no1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="1234567890"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/phone_no1txt"
        app:layout_constraintTop_toBottomOf="@id/carNotxt" />


    <TextView
        android:id="@+id/starttxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Start : "
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/packagetxt"/>

    <TextView
        android:id="@+id/endtxt"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:fontFamily="@font/poppins"
        android:text="End   : "
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starttxt" />

    <TextView
        android:id="@+id/carName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:fontFamily="@font/poppins"
        android:text="Mahindra KUV 100"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/carImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/start_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:fontFamily="@font/poppins"
        android:text="September 29 2021"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/starttxt"
        app:layout_constraintTop_toBottomOf="@id/packagetxt"/>
    <TextView
        android:id="@+id/start_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="200dp"
        android:text="Thursday 19:24"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/packagetxt" />
    <TextView
        android:id="@+id/end_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginLeft="200dp"
        android:text="Thursday 19:24"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start_time_txt" />

    <TextView
        android:id="@+id/end_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:fontFamily="@font/poppins"
        android:text="September 30 2021"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/endtxt"
        app:layout_constraintTop_toBottomOf="@+id/start_date_txt" />


    <TextView
        android:id="@+id/carNotxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:fontFamily="@font/poppins"
        android:text="GJ 01 UF 9998"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/carImage"
        app:layout_constraintTop_toBottomOf="@id/carName"
        />

    <TextView
        android:id="@+id/packagetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Range : "
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/carImage"
        app:layout_constraintTop_toBottomOf="@id/phone_no1txt"/>

    <TextView
        android:id="@+id/kms_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="150"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/packagetxt"
        app:layout_constraintTop_toBottomOf="@id/phone_no1"/>

    <TextView
        android:id="@+id/statustxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Status : "
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/endtxt"/>

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Booked"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/statustxt"
        app:layout_constraintTop_toBottomOf="@id/endtxt"/>

    <TextView
        android:id="@+id/total_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Total : Rs"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/end_time_txt"
        app:layout_constraintTop_toBottomOf="@id/end_time_txt"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="12000"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/total_price_txt"
        app:layout_constraintTop_toBottomOf="@id/end_time_txt"/>

</androidx.constraintlayout.widget.ConstraintLayout>