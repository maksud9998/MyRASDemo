<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_border"
    android:padding="15dp"
    tools:context=".View_Car">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/CarImage"
            android:layout_width="87dp"
            android:layout_height="114dp"
            android:background="@drawable/edit_text"
            android:contentDescription="userimg"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/democar" />

        <TextView
            android:id="@+id/Car_Name"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/CarImage"
            android:text="Car Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Car_No_Plate"
            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_below="@+id/Car_Name"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="4dp"
            android:layout_toEndOf="@+id/CarImage"
            android:text="Number Plate"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/FuelType"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CarImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:text=" Fuel Type" />

        <TextView
            android:id="@+id/Transmission_Type"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CarImage"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/FuelType"
            android:text=" Transmission Type" />

        <TextView
            android:id="@+id/status"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Transmission_Type"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/rentprice"
            android:text=" Status" />

        <TextView
            android:id="@+id/seatcapacity"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/status"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="1dp"
            android:layout_toEndOf="@+id/rentprice"
            android:text=" Seat Capacity" />

        <TextView
            android:id="@+id/rentprice"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FuelType"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:inputType="number"
            android:text=" Rent Price" />

        <TextView
            android:id="@+id/bodytype"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rentprice"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:inputType="text"
            android:text=" Body Type" />

        <Button
            android:id="@+id/deletecar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodytype"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnshape"
            android:fontFamily="@font/poppins"
            android:text="Delete"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/updatecar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bodytype"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/deletecar"
            android:background="@drawable/btnshape"
            android:fontFamily="@font/poppins"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
